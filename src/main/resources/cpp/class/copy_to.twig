{% set fields = definition.fields %}
{% for p in definition.parentPath -%}
  {% set fields = merge(fields, p.fields) %}
{%- endfor -%}
{% for field in fields -%}
  {%- set snakeCase = utils.toSnakeCase(field.name) -%}
  {%- set className = utils.getClassName(field.type) -%}
  {%- if (className == "ArrayType") -%}
    _dst.{{ snakeCase }}_ = std::array< {{ trim(macros.getBaseType(utils, field.type.type)) }}, {{ field.type.length }}>( {{ snakeCase }}_ );
  {%- elseif (className == "VectorType") -%}
    _dst.{{ snakeCase }}_ = std::vector< {{ trim(macros.getBaseType(utils, field.type.type)) }} >({{ snakeCase }}_);
  {%- elseif (className == "MapType") -%}
    _dst.{{ snakeCase }}_ = std::map< {{ trim(macros.getBaseType(utils, field.type.keyType)) }}, {{ trim(macros.getBaseType(utils, field.type.valueType)) }} >({{ snakeCase }}_);
  {%- elseif (utils.getClassName(field.type.definition) == "EnumDefinition") -%}
    _dst.{{ snakeCase }}_ = {{ snakeCase }}_;
  {%- elseif (field.type.token.toString() == "IDENTIFIER") -%}
    {% if (utils.getClassName(field.type.definition) == "StructDefinition") %}
      _dst.{{ snakeCase }}_ = {{ snakeCase }}_;
    {% else %}
    if({{ snakeCase }}_ != nullptr) {
      {{ snakeCase }}_->CopyTo(*_dst.{{ snakeCase }}_);
    }
    {% endif %}
  {%- else -%}
    _dst.{{ snakeCase }}_ = {{ snakeCase }}_;
  {%- endif -%}
{%- endfor %}
