  {% set className = utils.getClassName(type) %}

  {% if (className == "ArrayType") %}
    {{ trim(macros.getBasePrimitiveType(type.type)) }}[]
  {% elseif (className == "ListType") %}
    java.util.List<{{ trim(macros.getBaseType(type.type)) }}>
